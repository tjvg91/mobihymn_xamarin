<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobiHymn2.Views.AboutPage"
             xmlns:vm="clr-namespace:MobiHymn2.ViewModels"
             xmlns:elem="clr-namespace:MobiHymn2.Elements"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button
            Text="Show Description and Features"
            Padding="10"
            HorizontalOptions="Center"
            Margin="0,20"
            TextTransform="None"
            Clicked="Button_Clicked"
        />

        <Label
            Margin="10,0,15,0"
            Style="{StaticResource Title}"
            FontSize="Medium"
            FontAttributes="Bold">
            Revisions:
        </Label>

        <CollectionView ItemsSource="{Binding Revisions}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <elem:TimelineItem Item="{Binding .}" />
                </DataTemplate>

            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>

